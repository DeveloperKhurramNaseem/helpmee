# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do
  desc "Build & ship Android release to Firebase App Distribution"
  lane :android_firebase do
    # Ensure flutter is available on CI (we'll install in the workflow)
    sh "flutter pub get"

    # Build signed APK (ensure android/key.properties exists via CI step)
    sh "cd android && ./gradlew assembleRelease"

    # Upload to Firebase App Distribution
    # Requires: FIREBASE_TOKEN or service account env, APP_ID, TESTERS/GROUPS
    firebase_app_distribution(
      app: ENV["FIREBASE_APP_ID_ANDROID"],           # e.g. 1:1234567890:android:abc...
      testers: ENV["FIREBASE_TESTERS"],              # comma-separated emails
      release_notes: "CI auto-build #{Time.now.utc}",
      apk_path: "android/app/build/outputs/apk/release/app-release.apk",
      firebase_cli_path: "firebase"                  # we install firebase cli in CI
    )
  end

  desc "Runs all the tests"
  lane :test do
    gradle(task: "test")
  end

  desc "Submit a new Beta Build to Crashlytics Beta"
  lane :beta do
    gradle(task: "clean assembleRelease")
    crashlytics
  
    # sh "your_script.sh"
    # You can also use other beta testing services here
  end

  desc "Deploy a new version to the Google Play"
  lane :deploy do
    gradle(task: "clean assembleRelease")
    upload_to_play_store
  end
end
